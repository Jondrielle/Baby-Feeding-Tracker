FROM node:20

# Set working directory inside the container
WORKDIR /app

# Copy package files from the frontend folder into the working dir
COPY frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy all frontend code into /app
COPY frontend/ ./

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server
CMD ["npm", "run", "dev"]
